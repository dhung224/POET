@{
    ViewData["Title"] = "Joined Successfully";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="text-center mt-5">
    <h2 class="animate__animated animate__fadeInDown">
        🎉 You’ve successfully joined <b>@ViewBag.ClassName</b>!
    </h2>
    <p class="text-muted mt-3 animate__animated animate__fadeIn animate__delay-1s">
        You can now explore your class materials or return to your dashboard.
    </p>

    <div class="mt-4 animate__animated animate__fadeInUp animate__delay-2s">
        <a class="btn btn-primary me-3 shadow-sm"
           asp-controller="Classrooms"
           asp-action="Details"
           asp-route-id="@ViewBag.ClassId">
            View Class Details
        </a>

        <a class="btn btn-secondary shadow-sm"
           asp-controller="Student"
           asp-action="Index">
            Back to Dashboard
        </a>
    </div>
</div>

<style>
    
    .btn {
        transition: transform 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    
    body {
        background-color: #f8f9fa;
    }
</style>
