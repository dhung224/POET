@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Class Roster";
}
<h2>@ViewBag.ClassName (@ViewBag.ClassCode)</h2>
<p class="text-muted">List of students in this class</p>

<table class="table table-bordered mt-3 align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:48px;"></th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Account Code</th>
            <th>Joined At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            var avatar = string.IsNullOrWhiteSpace((string?)s.AvatarUrl)
            ? "https://via.placeholder.com/72?text=🙂"
            : (string)s.AvatarUrl;
            <tr>
                <td><img src="@avatar" alt="avatar" class="avatar-sm" /></td>
                <td>@s.FullName</td>
                <td>@s.Email</td>
                <td>@s.PhoneNumber</td>
                <td>@s.AccountCode</td>
                <td>@(s.JoinedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm"))</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary mt-3" asp-action="Details" asp-route-id="@ViewBag.ClassId">Back</a>

