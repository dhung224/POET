@using POETWeb.Models.ViewModels
@model StudentDashboardVM
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Student dashboard";
}

@{
    var displayName = "User";
    var avatarUrl = Url.Content("~/images/avatar-default.png");

    if (SignInManager.IsSignedIn(User))
    {
        var me = await UserManager.GetUserAsync(User);
        if (me != null)
        {
            displayName = !string.IsNullOrWhiteSpace(me.UserName) ? me.UserName! : (User?.Identity?.Name ?? "User");
            if (!string.IsNullOrWhiteSpace(me.AvatarUrl))
                avatarUrl = Url.Content(me.AvatarUrl);
        }
        else
        {
            displayName = User?.Identity?.Name ?? "User";
        }
    }
    else
    {
        displayName = User?.Identity?.Name ?? "User";
    }
}

