@model ClassQuickViewVM
@using POETWeb.Models.ViewModels;

@{
    var total = (int)(ViewBag.EnrolledCount ?? 0);
    int? cap = null;
    try { cap = (int?)ViewBag.MaxStudents; } catch { cap = null; }
    var hasCap = cap.HasValue && cap.Value > 0;
    var full = hasCap && total >= cap.Value;
    var pct = hasCap ? Math.Clamp((int)Math.Round((double)total / Math.Max(1, cap.Value) * 100d), 0, 100) : 0;
}

<div class="qv-stu">
    <div class="mb-2">
        <div class="h6 mb-1">
            @Model.Title <small class="text-muted">(@Model.ClassCode)</small>
        </div>
        <div class="mb-1"><span class="fw-semibold">Subject:</span> @Model.Subject</div>

        <div class="d-flex align-items-center gap-2">
            <span class="fw-semibold">Teacher:</span>
            <img src="@Url.Content(Model.TeacherAvatar ?? "~/images/avatar-default.png")"
                 class="avatar-sm qv-avatar" alt="Teacher"
                 onerror="this.src='@Url.Content("~/images/avatar-default.png")'">
            <span>@Model.TeacherName</span>
        </div>
    </div>

    <!-- Capacity (copy from Teacher version) -->
    <div class="mb-2">
        <div class="d-flex align-items-center justify-content-between">
            <div class="text-muted">
                <strong>Capacity:</strong>
                @if (hasCap)
                {
                    @($"{total} / {cap.Value} students")
                }
                else
                {
                    @($"{total} students • No limit")
                }
            </div>

            @if (hasCap)
            {
                if (full)
                {
                    <span class="badge bg-danger">Full</span>
                }
                else
                {
                    <span class="badge bg-secondary">@((cap.Value - total)) left</span>
                }
            }
        </div>

        @if (hasCap)
        {
            <div class="progress mt-1" style="height:6px;">
                <div class="progress-bar @(full ? "bg-danger" : "bg-success")" role="progressbar" style="width:@pct%"></div>
            </div>
        }
    </div>

    <hr class="my-3" />

    <div class="d-flex justify-content-between">
        <div>
            <a class="btn btn-stu me-2"
               asp-controller="Classrooms"
               asp-action="RosterStudent"
               asp-route-id="@Model.Id">
                Student list
            </a>

            <a class="btn btn-mat"
               asp-controller="Materials" asp-action="Index" asp-route-classId="@Model.Id">
                Materials
            </a>

            <a class="btn btn-grad-amber me-2"
               asp-controller="Assignment" asp-action="Student" asp-route-classId="@Model.Id">
                <i class="bi bi-pencil-square"></i> Assignments
            </a>
        </div>

        <button type="button" class="btn btn-grad-rose" data-leave-class="@Model.Id">
            Leave class
        </button>
    </div>
</div>
