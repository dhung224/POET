</style>

@section Scripts {
    <script>
        /* ===== Client-side search + filter ===== */
        (function(){
            const q = document.getElementById('assSearch');
            const rows = Array.from(document.querySelectorAll('#assList .ass-card-col'));
            const count = document.getElementById('assCount');
            let filterStatus = 'all';

            function visible(r){
                const t = r.getAttribute('data-title') || '';
                const c = r.getAttribute('data-class') || '';
                const s = r.getAttribute('data-status') || '';
                const term = (q.value || '').trim().toLowerCase();
                const matchText = !term || t.includes(term) || c.includes(term);
                const matchStatus = filterStatus === 'all' || s === filterStatus;
                return matchText && matchStatus;
            }
            function apply(){
                let v = 0;
                rows.forEach(r=>{
                    const show = visible(r);
                    r.style.display = show ? '' : 'none';
                    if(show) v++;
                });
                if(count) count.textContent = String(v);
            }
            q?.addEventListener('input', apply, {passive:true});

            document.querySelectorAll('.asss-filters .pill').forEach(btn=>{
                btn.addEventListener('click', ()=>{
                    document.querySelectorAll('.asss-filters .pill').forEach(b=>b.classList.remove('active'));
                    btn.classList.add('active');
                    filterStatus = btn.getAttribute('data-status') || 'all';
                    apply();
                });
            });

            apply();
        })();

        /* ===== Open modal from card ===== */
        function openAssModalFromEl(el) {
            const title   = el.dataset.title || 'Assignment';
            const type    = el.dataset.type || '—';
            const typeCls = el.dataset.typecls || 'badge-type';
            const cls     = el.dataset.class || '—';
            const status  = (el.dataset.status || '—').trim();
            const due     = el.dataset.due || '—';
            let   max     = parseInt(el.dataset.max, 10);     if (isNaN(max))  max  = 0;
            let   used    = parseInt(el.dataset.used, 10);    if (isNaN(used)) used = 0;
            const desc    = el.dataset.desc || '—';
            const start   = el.dataset.startUrl || '#';
            const hist    = el.dataset.historyUrl || '#';
            const dur     = el.dataset.duration;

            document.getElementById('assModalTitle').innerText = title;
            document.getElementById('assModalSubTitle').innerText = 'Preview assignment details';

            const typeBadge = document.getElementById('assModalTypeBadge');
            typeBadge.className = typeCls;
            typeBadge.innerText = type;

            document.getElementById('assModalClass').innerText = cls;
            document.getElementById('assModalStatus').innerText = status;
            document.getElementById('assModalDue').innerText = due;
            document.getElementById('assModalDuration').innerText = dur ? (dur + ' min') : '—';
            document.getElementById('assModalMax').innerText = max ? max : '—';
            document.getElementById('assModalDesc').innerText = (desc && desc.trim().length) ? desc : '—';

            const startBtn = document.getElementById('assModalStartBtn');
            const hintEl   = document.getElementById('assModalHint');
            startBtn.setAttribute('href', start);
            document.getElementById('assModalHistoryBtn').setAttribute('href', hist);

            // Conditions to allow Start:
            const statusOk = status.toLowerCase() === 'open';
            const attemptsOk = (max <= 0) || (used < max);
            const canStart = statusOk && attemptsOk;

            function disableStart(reason){
                startBtn.classList.add('btn-disabled');
                startBtn.setAttribute('aria-disabled', 'true');
                startBtn.setAttribute('tabindex', '-1');
                hintEl.classList.remove('text-muted');
                hintEl.classList.add('text-danger');
                hintEl.innerText = reason;
                startBtn.addEventListener('click', preventStartWhenDisabled, { once: true });
            }
            function enableStart(){
                startBtn.classList.remove('btn-disabled');
                startBtn.removeAttribute('aria-disabled');
                startBtn.removeAttribute('tabindex');
                hintEl.classList.remove('text-danger');
                hintEl.classList.add('text-muted');
                hintEl.innerText = max > 0 ? ('Attempts: ' + used + ' / ' + max + '. Review details before you start.') : 'Review details before you start.';
            }

            if (!statusOk) {
                const reason = status.toLowerCase() === 'closed'
                    ? 'This assignment is closed. You cannot start a new attempt.'
                    : 'This assignment is not open yet.';
                disableStart(reason);
            } else if (!attemptsOk) {
                disableStart('You have reached the attempt limit (' + used + ' / ' + max + ').');
            } else {
                enableStart();
            }

            bootstrap.Modal.getOrCreateInstance(document.getElementById('assModal')).show();
        }

        function preventStartWhenDisabled(e){
            if (e.currentTarget.classList.contains('btn-disabled')) {
                e.preventDefault();
                e.stopPropagation();
            }
        }

        document.querySelectorAll('.card-click').forEach(function(card){
            card.addEventListener('click', function(){ openAssModalFromEl(this); });
            card.addEventListener('keydown', function(e){
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openAssModalFromEl(this); }
            });
        });

        /* ===== History modal stacking (giữ nguyên ý tưởng của cậu) ===== */
        document.addEventListener('click', async function (e) {
            const btn = e.target.closest('#assModalHistoryBtn');
            if (!btn) return;

            e.preventDefault();
            const url = btn.getAttribute('href');
            if (!url || url === '#') return;

            try {
                const resp = await fetch(url, { credentials: 'same-origin' });
                const html = await resp.text();

                const old = document.getElementById('testHistoryModal');
                if (old) old.remove();

                const wrap = document.createElement('div');
                wrap.innerHTML = html;
                const injected = wrap.firstElementChild;
                if (!injected) return;
                document.body.appendChild(injected);

                const openCount = document.querySelectorAll('.modal.show').length;
                const zBase = 1050 + (10 * openCount);
                const modalEl = document.getElementById('testHistoryModal');
                modalEl.style.zIndex = zBase;

                const m = new bootstrap.Modal(modalEl, { backdrop: 'static', keyboard: false, focus: false });
                m.show();

                setTimeout(() => {
                    const backs = document.querySelectorAll('.modal-backdrop');
                    const newest = backs[backs.length - 1];
                    if (newest) {
                        newest.style.zIndex = (zBase - 1).toString();
                        newest.dataset.for = 'testHistory';
                    }
                }, 0);

                modalEl.addEventListener('hidden.bs.modal', () => {
                    const bd = document.querySelector('.modal-backdrop[data-for="testHistory"]');
                    if (bd) bd.remove();
                    document.body.classList.add('modal-open');
                    const parent = document.getElementById('assModal');
                    if (parent) parent.focus();
                }, { once: true });

            } catch (err) {
                console.error('Cannot open Test History modal:', err);
            }
        });
    </script>
}
