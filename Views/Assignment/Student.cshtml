@model POETWeb.Models.ViewModels.AssignmentStudentVM
@using POETWeb.Models.Enums
@{
    ViewData["Title"] = "Assignments";
    var hasClass = Model?.ClassId != null;
}

<!-- ===== Header ===== -->
<div class="asss-header">
    <div class="container d-flex align-items-center justify-content-between">
        <div class="py-3">
            <div class="small opacity-75">Assignments</div>
            <h4 class="mb-0">
                @if (hasClass)
                {
                    <text>@Model!.ClassName</text>
                }
                else
                {

                    <text>Across your joined classes</text>
                }
            </h4>
        </div>
        <div>
            <a asp-controller="Student" asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

<div class="container py-3 section-shell">
    <!-- ===== Toolbar ===== -->
    <div class="asss-toolbar">
        <div class="input-group asss-search">
            <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
            <input id="assSearch" type="text" class="form-control" placeholder="Search by title or class…">
        </div>

        <div class="asss-filters">
            <button class="pill pill-gray active" data-status="all">All</button>
            <button class="pill pill-indigo" data-status="open"><i class="bi bi-unlock"></i> Open</button>
            <button class="pill pill-amber" data-status="closed"><i class="bi bi-lock"></i> Closed</button>
            <div class="text-muted small ms-2">Total: <strong id="assCount">@((Model?.Items?.Count) ?? 0)</strong></div>
        </div>
    </div>

    <!-- ===== List ===== -->
    <div id="assList" class="row g-3">
        @if (Model?.Items == null || !Model.Items.Any())
        {
            <div class="col-12">
                <div class="asss-empty">
                    <div class="asss-empty__icon"><i class="bi bi-journal-x"></i></div>
                    <div>No assignments yet.</div>
                    <div class="text-muted small">Enjoy the peace while it lasts.</div>
                </div>
            </div>
        }
        else
        {
            @foreach (var a in Model.Items)
            {
                var typeText = a.Type switch
                {
                    AssignmentType.Mcq => "MCQ",
                    AssignmentType.Essay => "Essay",
                    _ => "Mixed"
                };
                var badgeCls = a.Type switch
                {
                    AssignmentType.Mcq => "badge-type badge-type-mcq",
                    AssignmentType.Essay => "badge-type badge-type-essay",
                    _ => "badge-type badge-type-mixed"
                };

                var statusLower = (a.Status ?? "").Trim().ToLowerInvariant();

                <div class="col-12 col-md-6 col-lg-4 ass-card-col"
                     data-title="@a.Title.ToLowerInvariant()"
                     data-class="@a.ClassName.ToLowerInvariant()"
                     data-status="@statusLower">
                    <div class="ass-card h-100 card-hover card-click"
                         role="button" tabindex="0" aria-label="Open assignment details"
                         data-id="@a.Id"
                         data-title="@a.Title"
                         data-type="@typeText"
                         data-typecls="@badgeCls"
                         data-class="@a.ClassName"
                         data-status="@a.Status"
                         data-due="@(a.DueAt.HasValue? a.DueAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "No due date")"
                         data-duration="@a.DurationMinutes"
                         data-max="@a.MaxAttempts"
                         data-used="@a.AttemptsUsed"
                         data-desc="@a.Description"
                         data-start-url="@Url.Action("Take", "Assignment", new { id = a.Id, index = 0 })"
                         data-history-url="@Url.Action("History", "Assignment", new { id = a.Id })">
                        <div class="ass-card__head"></div>
                        <div class="ass-card__body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="ass-card__title d-flex align-items-center gap-2">
                                    <i class="bi bi-clipboard-check text-slate-500"></i> @a.Title
                                    <span class="@badgeCls" title="Type">@typeText</span>
                                </div>
                                <span class="badge badge-soft" title="Status">@a.Status</span>
                            </div>

                            <div class="ass-card__meta mt-1">
                                <i class="bi bi-collection"></i>
                                <span class="ms-1">@a.ClassName</span>

                                @if (a.DueAt.HasValue)
                                {
                                    <span class="ms-3">
                                        <i class="bi bi-clock"></i>
                                        Due: @a.DueAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="ms-3"><i class="bi bi-clock-history"></i> No due date</span>
                                }
                            </div>

                            <div class="ass-card__footer mt-3">
                                <div class="small text-muted">
                                    Attempts @a.AttemptsUsed / @a.MaxAttempts
                                </div>
                                <div class="asss-progress mt-1" role="progressbar" aria-valuemin="0" aria-valuemax="@a.MaxAttempts" aria-valuenow="@a.AttemptsUsed">
                                    @{
                                        var max = a.MaxAttempts <= 0 ? 1 : a.MaxAttempts;
                                        var percent = Math.Clamp((int)Math.Round(100.0 * a.AttemptsUsed / max), 0, 100);
                                    }
                                    <div class="asss-progress__bar" style="width:@percent%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* ===== Modal: Assignment details ===== *@
<div class="modal fade" id="assModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header" style="background:linear-gradient(90deg,#6366f1,#22d3ee); color:#fff;">
                <div>
                    <h5 class="modal-title" id="assModalTitle">Assignment</h5>
                    <div class="small opacity-90" id="assModalSubTitle"></div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center gap-2">
                            <span id="assModalTypeBadge" class="badge-type">Type</span>
                            <span class="badge badge-soft" id="assModalStatus">Status</span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-collection"></i> Class</div>
                            <div class="info-value" id="assModalClass">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-clock"></i> Due</div>
                            <div class="info-value" id="assModalDue">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-hourglass-split"></i> Duration</div>
                            <div class="info-value" id="assModalDuration">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-arrow-repeat"></i> Max attempts</div>
                            <div class="info-value" id="assModalMax">—</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-card-text"></i> Description</div>
                            <div class="info-value" id="assModalDesc" style="white-space:pre-wrap;">—</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer d-flex justify-content-between">
                <div class="small text-muted" id="assModalHint">Review details before you start.</div>
                <div class="d-flex gap-2">
                    <a id="assModalHistoryBtn" href="#" class="btn btn-outline-secondary">
                        <i class="bi bi-journal-text"></i> Test history
                    </a>
                    <a id="assModalStartBtn" href="#" class="btn btn-grad-sky">
                        <i class="bi bi-play-circle"></i> Start
                    </a>
                    <button type="button" class="btn btn-soft" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Shell */
    .asss-header {
        background: linear-gradient(90deg,#6366f1,#22d3ee);
        color: #fff;
        box-shadow: 0 2px 8px rgba(99,102,241,.15)
    }

