@model POETWeb.Models.ViewModels.AssignmentTeacherVM
@{
    ViewData["Title"] = "Assignment Management";
    var hasClass = Model?.ClassId != null;
}

<!-- Header gradient full-width -->
<div class="asx-header">
    <div class="container d-flex align-items-center justify-content-between">
        <div class="py-3">
            <div class="small opacity-75">Assignment</div>
            <h4 class="mb-0">
                @if (hasClass)
                {
                    <text>Assignments • @Model!.ClassName</text>
                }
                else
                {
                    <text>Assignments • Across your classes</text>
                }
            </h4>
        </div>
        <div class="d-flex gap-2">
            @if (hasClass)
            {
                <a asp-controller="Assignment" asp-action="Create"
                   asp-route-classId="@Model!.ClassId"
                   class="btn btn-light btn-sm">
                    + Create assignment
                </a>
            }
            else
            {
                <a asp-controller="Classrooms" asp-action="Index"
                   class="btn btn-light btn-sm">
                    Pick a class to create
                </a>
            }
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

<div class="container py-3">
    <!-- Sub header line -->
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div class="text-muted small">
            @if (hasClass)
            {
                <text>Class ID: <strong>@Model!.ClassId</strong></text>
            }
            else
            {
                <text>Showing all assignments you created</text>
            }
        </div>
    </div>

    <div class="section-shell">
        @if (Model?.Items == null || !Model.Items.Any())
        {
            <div class="asx-empty border">
                <div class="asx-empty__icon">
                    <i class="bi bi-journal-text"></i>
                </div>
                <div>No assignments yet</div>
                <div class="text-muted small">Create your first assignment to get the party started.</div>
                <div class="mt-2">
                    @if (hasClass)
                    {
                        <a asp-controller="Assignment" asp-action="Create"
                           asp-route-classId="@Model!.ClassId"
                           class="btn btn-grad-amber btn-sm">+ Create assignment</a>
                    }
                    else
                    {
                        <a asp-controller="Classrooms" asp-action="Index"
                           class="btn btn-grad-amber btn-sm">Pick a class to create</a>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var a in Model.Items)
                {
                    <div class="col-12">
                        <div class="ass-card">
                            <div class="ass-card__head"></div>
                            <div class="ass-card__body">
                                <div class="d-flex justify-content-between flex-wrap gap-2">
                                    <div class="min-w-0">
                                        <div class="ass-card__title text-truncate" title="@a.Title">@a.Title</div>

                                        @if (!string.IsNullOrWhiteSpace(a.Description))
                                        {
                                            <div class="ass-card__desc">
                                                @a.Description
                                            </div>
                                        }

                                        <div class="ass-card__meta">
                                            <span class="meta-chunk">
                                                <i class="bi bi-collection"></i>
                                                <span class="text-truncate" title="@a.ClassName">@a.ClassName</span>
                                            </span>

                                            @if (a.DueAt.HasValue)
                                            {
                                                <span class="meta-chunk">
                                                    <i class="bi bi-calendar3"></i>
                                                    <span>Due: @a.DueAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="meta-chunk">
                                                    <i class="bi bi-clock-history"></i>
                                                    <span>No due date</span>
                                                </span>
                                            }

                                            <span class="meta-chunk">
                                                <i class="bi bi-arrow-repeat"></i>
                                                <span>Attempts: @a.MaxAttempts</span>
                                            </span>

                                            <span class="status-pill" data-status="@a.Status">@a.Status</span>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-2 ms-auto">
                                        <a asp-controller="Assignment" asp-action="Edit"
                                           asp-route-id="@a.Id"
                                           asp-route-classId="@Model?.ClassId"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-controller="Assignment" asp-action="Submissions"
                                           asp-route-id="@a.Id"
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-people"></i> Submissions
                                        </a>

                                        <!-- Delete: mở modal xác nhận -->
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmDeleteModal"
                                                data-assid="@a.Id"
                                                data-classid="@Model?.ClassId"
                                                data-title="@a.Title">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header asx-modal-danger text-white">
                <h5 class="modal-title">Delete this assignment?</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-2">Assignment: <strong id="delAssTitle">—</strong></div>
                <p class="mb-2">This will permanently delete the assignment, its questions and choices.</p>
                <p class="mb-0 text-danger fw-semibold">
                    All student attempts and answers will also be deleted. This action cannot be undone.
                </p>
            </div>

            <div class="modal-footer">
                <form asp-controller="Assignment" asp-action="Delete" method="post" class="ms-auto">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delAssId" />
                    <input type="hidden" name="classId" id="delClassId" />
                    <button type="button" class="btn btn-soft" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===== Header ===== */
    .asx-header {
        background: linear-gradient(90deg,#6366f1,#22d3ee);
        color: #fff;
        box-shadow: 0 2px 8px rgba(99,102,241,.15);
        margin-bottom: .25rem;
    }

        .asx-header .btn {
            --bs-btn-padding-y: .35rem;
            --bs-btn-padding-x: .65rem
        }

    /* ===== Action buttons reuse ===== */
    .btn-soft {
        background: #f3f4f6;
        border: 1px solid #e5e7eb;
        color: #111827
    }

        .btn-soft:hover {
            background: #eef2f7
        }

    .btn-grad-amber {
        background: linear-gradient(90deg,#f59e0b,#ef4444);
        color: #fff;
        border: none
    }

        .btn-grad-amber:hover {
            filter: brightness(.95);
            color: #fff
        }

    /* ===== Empty state ===== */
    .asx-empty {
        text-align: center;
        padding: 2.25rem;
        border-radius: 14px;
        background: #fbfcff
    }

    .asx-empty__icon {
        width: 48px;
        height: 48px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        margin-bottom: .5rem;
        background: linear-gradient(120deg,#eef2ff,#e0f2fe);
        color: #4f46e5;
        font-size: 1.25rem
    }

    /* ===== Card ===== */
    .ass-card {
        border: 1px solid #ececec;
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 1px 2px rgba(0,0,0,.04);
        transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
    }

        .ass-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 16px rgba(24,39,75,.10);
            border-color: #e6e9f5;
        }

    .ass-card__head {
        height: 6px;
        background: linear-gradient(90deg,#6366f1,#22d3ee)
    }

    .ass-card__body {
        padding: 14px 16px
    }

    .ass-card__title {
        font-size: 1.05rem;
        font-weight: 700;
        color: #111827;
        letter-spacing: .2px
    }

    .ass-card__desc {
        margin-top: .15rem;
        color: #6b7280;
        font-size: .9rem;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden
    }

    .ass-card__meta {
        margin-top: .35rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: .75rem;
        color: #6b7280
    }

        .ass-card__meta .meta-chunk {
            display: inline-flex;
            align-items: center;
            gap: .35rem
        }

        .ass-card__meta i {
            opacity: .75
        }

    /* ===== Status badge with auto color by text ===== */
    .status-pill {
        background: #f3f4f6;
        color: #374151;
        border: 1px solid #e5e7eb;
        border-radius: 999px;
        padding: .15rem .55rem;
        font-weight: 600;
        font-size: .78rem
    }

        .status-pill[data-status*="Active" i],
        .status-pill[data-status*="Open" i],
        .status-pill[data-status*="Published" i] {
            background: #e8fff3;
            color: #0f766e;
            border-color: #bff3d6;
        }

        .status-pill[data-status*="Draft" i] {
            background: #fff7ed;
            color: #b45309;
            border-color: #ffd2a5;
        }

        .status-pill[data-status*="Closed" i],
        .status-pill[data-status*="Archived" i] {
            background: #eef2ff;
            color: #4f46e5;
            border-color: #d9ddff;
        }

    /* ===== Modal header gradient danger ===== */
    .asx-modal-danger {
        background: linear-gradient(90deg,#ef4444,#f97316) !important
    }

    /* Container width sweet spot */
    .section-shell {
        max-width: 1100px;
        margin: 0 auto
    }
</style>

@section Scripts {
    <script>
        document.getElementById('confirmDeleteModal')?.addEventListener('show.bs.modal', function (ev) {
            const btn = ev.relatedTarget;
            if (!btn) return;
            const id = btn.getAttribute('data-assid');
            const cid = btn.getAttribute('data-classid');
            const title = btn.getAttribute('data-title') || '—';

            document.getElementById('delAssId').value = id;
            document.getElementById('delClassId').value = cid ?? '';
            document.getElementById('delAssTitle').innerText = title;
        });
    </script>
}
