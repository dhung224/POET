@{
    ViewData["Title"] = "Admin";
}

<!-- Header -->
<nav class="adminbar shadow-sm">
    <div class="container-xxl d-flex align-items-center justify-content-between">
        <div class="py-2">
            <div class="small opacity-75">Administration</div>
            <h4 class="mb-0">Control Panel</h4>
        </div>

        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-light btn-sm">
                <i class="bi bi-box-arrow-right"></i> Log out
            </button>
        </form>
    </div>
</nav>

<!-- Content -->
<div class="container-xxl py-4">
    <div class="row g-3">
        <!-- Manage Accounts -->
        <div class="col-12 col-md-6">
            <div class="admin-card shadow-sm">
                <div class="admin-card__icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="admin-card__body">
                    <h5 class="mb-1">Manage Accounts</h5>
                    <p class="text-muted mb-3">Promote, remove, or search users across the system.</p>
                    <a asp-action="Users" class="btn btn-primary btn-sm">Open</a>
                </div>
            </div>
        </div>

        <!-- Manage Classes -->
        <div class="col-12 col-md-6">
            <div class="admin-card shadow-sm">
                <div class="admin-card__icon admin-card__icon--indigo">
                    <i class="bi bi-journal-check"></i>
                </div>
                <div class="admin-card__body">
                    <h5 class="mb-1">Manage Classes</h5>
                    <p class="text-muted mb-3">View, delete classes and manage materials, assignments, students.</p>
                    <a asp-action="Classes" class="btn btn-primary btn-sm">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .adminbar {
            background: linear-gradient(90deg,#0ea5e9,#6366f1);
            color: #fff
        }

            .adminbar .btn {
                border-color: rgba(255,255,255,.7);
                color: #fff
            }

                .adminbar .btn:hover {
                    background: rgba(255,255,255,.12);
                    color: #fff
                }

        .admin-card {
            display: flex;
            gap: 14px;
            padding: 16px;
            border: 1px solid #eef2f7;
            border-radius: 14px;
            background: #fff
        }

        .admin-card__icon {
            width: 52px;
            height: 52px;
            flex: 0 0 52px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: linear-gradient(135deg,#ecfeff,#dbeafe);
            color: #0ea5e9;
            font-size: 22px
        }

        .admin-card__icon--indigo {
            background: linear-gradient(135deg,#eef2ff,#e0e7ff);
            color: #6366f1
        }

        .admin-card__body {
            flex: 1 1 auto
        }

        /* Small polish */
        .text-muted {
            color: #6b7280 !important
        }

        .btn-primary {
            background: #2563eb;
            border-color: #2563eb
        }

            .btn-primary:hover {
                filter: brightness(.95)
            }
    </style>
}
